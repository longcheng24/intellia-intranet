<!DOCTYPE html>
<html>
	<head>
	  <title>IntelliaIntranet</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

<div class="container" ng-app="app">

		<div class="col-md-3 profileCol">
			<% if user_signed_in? %>
		  <div class="imageLine">
				<% if current_user.photo? %>
		    <%= image_tag(current_user.photo, class:"img-responsive")  %>
				<% else %>
				<img src="http://www.johndoe.pro/img/John_Doe.jpg" class="img-responsive">
				<% end %>
		  </div>
		  <div class="nameLine">
				<% if current_user.first_name? and current_user.last_name? %>
		    <p><%= current_user.first_name + " " +  current_user.last_name %></p>
				<% else %>
				<p>I'm Jonn Doe</p>
				<% end %>
		  </div>
		  <div class="departLine">
		    <p><%= current_user.department  %></p>
		  </div>
		  <div class="lastLoginLine">
		    <p>Last Login: <%= current_user.last_sign_in_at  %></p>
		  </div>

		  <div ng-controller="JsonUserCtrl" ng-init="setup()">

		    <div class="form-group">
		      <div class="input-group">
		        <div class="input-group-addon">Search</div>
		        <input type="text" class="form-control" placeholder="Search users" ng-model="search">
		      </div>
		    </div>

		    <div class="row">
		      <h3>Users Information</h3>

		      <div class="table-responsive">
		        <table class="table table-bordered table-striped table-hover">
		          <tbody>
		            <tr>
		              <th>Email</th>
		              <th>First Name</th>
		              <th>Last Name</th>
		              <th>Department</th>
		            </tr>
		            <tr ng-repeat="user in users | filter:search">
		              <td>{{ user.email}}</td>
		              <td><a ng-href="/accounts/{{user.id}}">{{ user.first_name}}</a></td>
		              <td>{{ user.last_name}}</td>
		              <td>{{ user.department}}</td>
		            </tr>
		          </tbody>
		        </table>
		      </div>
		    </div>
		  </div>
			<% else %>
				<div>
					<img src="http://www.johndoe.pro/img/John_Doe.jpg" class="img-responsive">
					<p>Intranet</p>
				</div>
			<% end %>
		</div>
		<div class="col-md-2 menuCol">
		  <ul>
		    <li>ARTICLES</li>
		    <li>TECHNOLOGIES</li>
		    <li>TWITTER</li>
		    <li>CALENDAR</li>
		  </ul>
		</div>

		<div class="col-md-7 contentCol">
			<%= yield %>
		</div>
</div>

	</body>
</html>
