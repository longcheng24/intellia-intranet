<div class="row">
	<div class="col-sm-12">
		<h1 class="contentTitle">CALENDAR</h1>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
	<%= link_to "ADD EVENT +", new_calendar_path, class: 'btn center-block calendar_new' %>
	<%= month_calendar events: @calendars do |date, calendars| %>
	  <%= date.strftime("%d") %>
	  <% calendars.each do |calendar| %>
	    <p><%= link_to("#{calendar.start_time.strftime("%I:%M%p")}", {:action => 'show', :id => calendar.id}, :class => 'action show') %>
	    <%= link_to("#{calendar.title}", {:action => 'show', :id => calendar.id}, :class => 'action show') %></p>
	  <% end %>
	<% end %>
	</div>
</div>