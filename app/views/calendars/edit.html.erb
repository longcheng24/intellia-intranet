<div class="row">
	<div class="col-sm-12 new_cal_event">
		<h1 class="contentTitle">UPDATE EVENT</h1>
		<%= form_for(:calendar, :url => {:action => 'update', :id => @calendar.id}) do |f| %>
		  <%= f.label :title %><br>
		  <%= f.text_field :title %><br>
		  <%= f.label :start_time %><br>
		  <%= f.datetime_select :start_time %><br>
		  <%= f.hidden_field :user_id, :value => current_user.id%><br>
		  <%= f.submit "UPDATE EVENT", class: 'btn' %>
		<% end %>
	</div>
</div>