//= depend_on_asset "intranet_bg.jpg"
html{
  line-height: 1.5;
  h1,h2,h3,h4,h5,h6,p,label{
    color:#FFF;
  }
  a{
    color:#74b5ae;
    &:visited{
      color:#FFF;
    }
  }
  ul, ol{
    margin: 0
  }
  input{
    padding:8px 4px;
  }
  body{
  background:url('<%= asset_path('intranet_bg.jpg') %>');
  background-size: cover;
  background-attachment: fixed;
  -webkit-font-smoothing: antialiased;
    h1{
      font-size: 2em;
    }
    .container-fluid{
      padding:0;
      @media all and (min-width: 992px){
        padding:0 2%;
      }
    }
    a:hover{
      text-decoration: underline;
      background: none;
    }
    .clear{
      clear: both;
    }
    .contentTitle{
      display: inline-block;
      border-bottom: 3px groove #f8f8f8;
      color: #f8f8f8;
    }
    .articleGrid{
      min-height: 21vh;
      @media all and (min-width: 1200px){
        min-height: 225px;
      }
      h5 a{
        text-transform: uppercase;
        color: #f8f8f8;
        line-height:1.5;
      }
    }
    .articleSerach{
      width: 100%;
      float: none;
      margin-top: 20px;
      @media all and (min-width: 992px){
        width:60%;
        float: right;
      }
    }
    .articleThum{
      overflow: hidden;
      max-width: 100%
    }
    .profileCol{
      padding-top: 20px;
      color: #f8f8f8;
      height:auto;
      @media all and (min-width: 992px){
        height:100vh;
      }
      position: relative;
      .intellia-profile-logo{
        max-width: 50%;
        height: auto;
        position: absolute;
        bottom:20px;
        left:25%;
      }
      .profileInfo{
        margin-bottom: 20px;
        .imageLine img{
          border-radius: 50%;
        }
        .nameLine{
          h4{
            margin-top:0;
          }
        }
        .lastLoginLine{
          p{
            white-space: nowrap;
            @media all and (min-width: 992px){
              font-size:.85vw;
            }
          }
          .logout, .edit{
            width:47%;
          }
          .logout{
            /*margin-right: 3%;*/
          }
        }
      }
    }
    .plContainer{
      height: 50vh;
      overflow-y: scroll;
      color: #f8f8f8;
      .profileList{
        clear:both;
        .profileRow{
          display: flex;
          flex-flow: row wrap;
          justify-content: flex-start;
          align-items: center;
          margin:0 -15px 10px -15px;
          padding:0 15px;
          .profilePic{
            width:12%;
            margin-right: 5%;
            img{
              border-radius: 50%;
              display: block;
              max-width: 100%;
              height: auto;
            }
          }
          .profileName{
            width:83%;
          }
        }
      }
    }
    .menuCol{
      position: relative;
      height: 100vh;
      h5{
        color:#6c6c6c;
        @media all and (min-width: 1200px){
          font-size:.75vw;
        }
      }
      a{
        h5:hover{
          color:#cb481e;
        }
        color: #000;
        &:visted{
        }
        &:hover{
          color:#cb481e;
          text-decoration: none;
        }
        &:active{
          color:#cb481e;
        }
      }
      ul{
        padding: 0 25px;
        @media all and (min-width: 1200px){
          padding:0;
        }
        background: rgba(206, 217, 218, 0.8);
        li{
          height:25vh;
          list-style: none;
          border-bottom: solid 2px #6c6c6c;
          padding-top: 50px;
          &:last-child{
            border-bottom: none;
          }
        }
      }
      img{
        margin: auto;
      }
    }
    .menuColMobile{
      width:100%;
      margin:0;
      position: fixed;
      bottom:0;
      background-color: rgba(206, 217, 218, 1.0);
      z-index: 56;
      height: 50px;
      padding-top: 6px;
      ul.menuColMobileMenu{
        padding:0;
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        align-items: center;
        list-style-type: none;
        li{
          a{
            .glyphicon-user {
              font-size: 2em;
              color:#666;
              &.active {
                color:#cb481e;
              }
            }
            h5 {
              text-indent: -9999px;
            }
          }
        }
      }
    }
    .authorLine, .dateLine{
      color:#cccccc
    }
    .softName{
      margin-top: 25px;
      color: #74b5ae;
    }
    .softDesc{
      color: #cccccc;
    }
    .softList{
      text-align: center;
      margin-bottom: 50px;
      margin-top:35px
    }
    .softwareAdminTab a{
      display: inline-block;
      color: #f8f8f8;
      text-decoration: none;
      margin-right: 30px;
    }
    .activeTab h5{
      color: #cb481e;
    }
    .sofwareDepTitl{
      color: #f8f8f8;
    }
    .softList img{
      max-width: 80%;
      margin: auto;
    }
    .contentCol{
      height: 100vh;
      overflow-y: scroll;
      i{
        color:#FFF;
      }
      .imageLine img{
        border-radius: 50%;
      }
      #user_remember_me{
        width: 10px;
      }
      .custCard{
        background: rgba(255,255,255,0.10);
        border: 1px solid rgba(255,255,255,0.15);
        margin-bottom: 20px;
        padding:15px;
        @media all and (min-width: 992px){
          margin-bottom:30px;
        }
      }
      .readMore{

      }
      #twitterContainer{
        display: none;
      }
    }
    /*****
    Form Sytling
    ***/
    .login_panel {
      background-color: rgba(255,255,255,0.15);
      padding: 20px;
      margin-top: 20px;
      border: 1px solid rgba(255,255,255,0.10);
    }
    .field{
      i, input[type="file"], em{
        color:#FFF;
      }
    }
    #error_explanation{
      width:auto;
    }
    /*****
    Search Styling
    ***/
    .form-group{
      border:1px solid rgba(255,255,255,0.25);
      .input-group-addon {
        color: #FFF;
        background-color: transparent;
        border: none;
      }
      .form-control {
        color: #FFF;
        background-color: transparent;
        background-image: none;
        border: none;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
        -o-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
        transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
        &:focus {
          border-color: transparent;
          outline: 0;
          -webkit-box-shadow: none;
          box-shadow: none;
        }
      }
    }

    /*****
    Article Pagination
    ***/
    .article-nav{
      width:100%;
      margin:0 auto;
      padding-bottom: 50px;
    }
    @media all and (min-width:768px){
      .article-nav{
        width:50%;
      }
    }
    /*****
    Calendar View
    ***/
    .simple-calendar{
      text-align: center;
      color:#FFF;
      table.table{
        table-layout: fixed;
        margin-top: 20px;
        thead{
          tr{
            th{
              text-align: center;
              font-weight: normal;
              border:none;
            }
          }
        }
        tbody{
          tr{
            td{
              border:none;
              font-size: 1.5em;
              p{
                a{
                  font-size: 1em;
                }
              }
              a{
                font-size: .75em;
              }
            }
          }
        }
        tr{
          border:0;
          td{
            width:14.28571428571429%;
            height: 100px;
          }
        }
      }
      .table-striped>tbody>tr:nth-child(odd) {
        background-color: transparent;
      }
    }
    .calendar_new{
      width:25%;
      margin-bottom: 20px;
    }
    .new_cal_event{
      color:#FFF;
      input{
        margin-bottom: 10px;
      }
      input[type="text"]{
        color:#333;
      }
    }

    /*****
    Bootstrap Overrides
      BUTTONS
    ***/
    .btn{
      padding: 10px 5px;
      color:#FFF;
      border-radius: 0;
      background-color: transparent;
      border:1px solid rgba(255,255,255,0.25);
      font-size: .85em;
      &:hover{
        background-color:rgba(255,255,255,0.15);
        color:#FFF;
      }
    }
    /*****
    Bootstrap Overrides
      FORMS
    *****/
    #new_user{
      input{
        width:100%;
      }
      input[type="email"],input[type="password"]{
        background-color:#FFF !important;
        border:none;
        /*the following  is a chrome hack to override yellow color*/
        &:-webkit-autofill{
          -webkit-box-shadow: 0 0 0 100px #fff inset;
          -moz-box-shadow: 0 0 0 100px #fff inset;
          box-shadow: 0 0 0 100px #fff inset;
        }
      }
    }
    select {
      background: rgba(255,255,255,0.25);
      color:#FFF;
      padding: 5px;
      border:1px solid rgba(255,255,255,0.25);
      border-radius:0;
      height: 34px;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      }
    .pagination>li>a, .pagination>li>span{
      background-color: transparent;
      color:#74b5ae;
    }
    .pagination>li>a:hover, .pagination>li>span:hover, .pagination>li>a:focus, .pagination>li>span:focus{
      color: #FFF;
      background-color: #74b5ae;
      border-color: #74b5ae;
    }
    .pagination>.active>a, .pagination>.active>span, .pagination>.active>a:hover, .pagination>.active>span:hover, .pagination>.active>a:focus, .pagination>.active>span:focus{
      background-color:#74b5ae;
      border-color:#74b5ae;
    }
    .pagination>.disabled>span, .pagination>.disabled>span:hover, .pagination>.disabled>span:focus, .pagination>.disabled>a, .pagination>.disabled>a:hover, .pagination>.disabled>a:focus{
      color: #FFF;
      background-color: transparent;
    }
    .pagination>li:last-child>a, .pagination>li:last-child>span{
      border-bottom-right-radius: 0;
      border-top-right-radius: 0;
    }
    .pagination>li:first-child>a, .pagination>li:first-child>span{
      border-bottom-left-radius: 0;
      border-top-left-radius: 0;
    }
    #twitterContainer, .tab-pane, .calendar_pane, .profile_pane{
        background-color: rgba(255,255,255,0.15);
        padding: 20px;
        margin-top: 20px;
        border: 1px solid rgba(255,255,255,0.10);
        iframe{
          p{
            font-size:1.5em;
          }
        }
    }
  } /*body end*/
}/*html end*/
